<h1>Edit Celebrity</h1>

<form action="/celebrities/{{celebrity._id}}/edit" method="post">
  <div class="form-group">
    <label for="name-input">Name</label>
    <input name="name" value="{{celebrity.name}}" type="text" class="form-control" id="name-input">
  </div>

  <div class="form-group">
    <label for="occupation-input">Occupation</label>
    <input name="occupation" value="{{celebrity.occupation}}" type="text" class="form-control" id="occupation-input">
  </div>

  <div class="form-group">
    <label for="catch-phrase-input">Catch Phrase </label>
    <input name="catchPhrase" value="{{celebrity.catchPhrase}}" type="text" class="form-control"
      id="catch-phrase-input">
  </div>

  <button type="submit" class="btn btn-dark">Edit Celebrity</button>

</form>