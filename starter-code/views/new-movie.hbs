<h1>Add New Movie</h1>

<form action="/movies/create" method="post">
  <div class="form-group">
    <label for="title-input">Title</label>
    <input name="title" type="text" class="form-control" id="title-input">
  </div>

  <div class="form-group">
    <label for="genre-input">Genre</label>
    <input name="genre" type="text" class="form-control" id="genre-input">
  </div>

  <div class="form-group">
    <label for="plot-input">Plot</label>
    <input name="plot" type="text" class="form-control" id="plot-input">
  </div>

  <button type="submit" class="btn btn-dark">Add Movie</button>

</form>